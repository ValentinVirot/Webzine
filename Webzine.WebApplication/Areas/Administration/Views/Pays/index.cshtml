@{
    Layout = "_Layout";
}
@model IndexPaysViewModel

<div class="container-fluid">
    <div class="col mt-4">
        <h1>Pays</h1>
        <hr />
        <form method="get">
            <button asp-route-area="Administration" asp-controller="Pays" asp-action="@(nameof(PaysController.Manage))" asp-route-fonction="Create" class="btn btn-primary mb-4">
                <i class="fas fa-plus mr-2"></i>Ajouter un nouveau pays
            </button>
        </form>
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="header-column">
                    <th scope="col" class="first-column">Nom du pays</th>
                    <th scope="col" class="second-column">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Pays)
                {
                    @await Component.InvokeAsync("RowTablePays", new { pays = item });
                }

            </tbody>
        </table>
        @if (@Model.TotalPays > @Model.LengthPage)
        {
            @await Component.InvokeAsync("PaginationPays", new { pagination = Model })
        }
    </div>

</div>